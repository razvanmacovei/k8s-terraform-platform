# S3 Backend Configuration Example
# Copy this block into modules/providers.tf inside the terraform {} block
#
# Prerequisites:
#   - S3 bucket created
#   - DynamoDB table for state locking (optional but recommended)
#   - IAM permissions for S3 and DynamoDB access

terraform {
  backend "s3" {
    bucket         = "my-terraform-state-bucket"
    key            = "k8s-platform/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "terraform-state-lock"
  }
}
